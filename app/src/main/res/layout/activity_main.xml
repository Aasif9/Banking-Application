<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/home_screen"
    android:orientation="vertical"
    android:background="#BFA2F4"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/bank_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:text="Basic Banking App"
        android:textColor="#DD03000A"
        android:fontFamily="@font/armata"
        android:textSize="32sp"
        android:textStyle="bold"/>


    <Button
        android:id="@+id/users"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="90dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/averia_serif_libre_light"
        android:onClick="showUsers"
        android:text="@string/all_users"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/button_round"
       />

    <Button
        android:id="@+id/transactions"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_round"
        android:fontFamily="@font/averia_serif_libre_light"
        android:onClick="showTransactions"
        android:text="Transactions\n History"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:textStyle="bold" />
</LinearLayout>